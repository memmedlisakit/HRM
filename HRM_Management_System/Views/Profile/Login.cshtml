
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Profile</title>
    <link rel="stylesheet" href="~/Assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/css/style.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</head>
<body>
    <div class="container">
        <a href="/Admin/AdminLogin/login" class="btn btn-success btn-sm float-right">
            <i class="fas fa-user"></i> Go To Employee Panel
        </a>
    </div> 
    <div class="login">
        <h1>Login Profile</h1>
        <form method="post" action="/Profile/Login">
            <input type="text" name="email" placeholder="E-mail" required="required" />
            <input type="password" name="password" placeholder="Password" required="required" />
            <button type="submit" class="btn btn-primary btn-block btn-large">Log In <i class="fas fa-sign-in-alt"></i></button>
        </form>
        <br>
        @if (ViewBag.error != null)
        {
            <label class="alert alert-danger">@ViewBag.error</label>
        }
    </div>

    <script src="~/Assets/js/jquery.js"></script>
    <script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>