@model HRM_Management_System.Models.Departament

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Index", "Departaments")" class="btn btn-warning"><i class="fa fa-arrow-left"></i> Back</a>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Departament</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Department Name :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.depart_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.depart_name, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-success btn-sm add_input" style="margin-top:10px;">More Designations <i class="fa fa-plus"></i></button>
            </div>
        </div>
        <div class="input_contain">
            <div class="form-group">
                <div class="col-md-10">
                    <label>Designation :</label>
                    <input type="text" class="form-control" name="desig_name" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
 